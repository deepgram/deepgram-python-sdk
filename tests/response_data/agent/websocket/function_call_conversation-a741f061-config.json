{
  "name": "function_call_conversation",
  "description": "Test function calling functionality",
  "agent_config": {
    "think": {
      "provider": {
        "type": "open_ai",
        "model": "gpt-4o-mini"
      },
      "prompt": "You are a helpful assistant that can call functions to get weather information.",
      "functions": [
        {
          "name": "get_weather",
          "description": "Get current weather information for a location",
          "parameters": {
            "type": "object",
            "properties": {
              "location": {
                "type": "string",
                "description": "The location to get weather for"
              }
            },
            "required": [
              "location"
            ]
          },
          "method": "GET",
          "url": "https://api.example.com/weather"
        }
      ]
    },
    "speak": {
      "provider": {
        "type": "deepgram",
        "model": "aura-2-thalia-en"
      }
    },
    "listen": {
      "provider": {
        "type": "deepgram",
        "model": "nova-3"
      }
    },
    "language": "en"
  },
  "inject_messages": [
    "What's the weather like in New York?",
    "Can you also check the weather in London?"
  ],
  "expected_events": [
    "Welcome",
    "SettingsApplied",
    "ConversationText"
  ],
  "conditional_events": [
    "FunctionCallRequest",
    "AgentStartedSpeaking",
    "AgentAudioDone"
  ],
  "test_inject_user_message": true,
  "test_inject_agent_message": false,
  "test_function_calls": true,
  "expect_error": false
}